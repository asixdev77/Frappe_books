{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["src/*"],
      "schemas/*": ["schemas/*"],
      "backend/*": ["backend/*"],
      "common/*": ["common/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",

    "schemas/**/*.ts",
    "backend/**/*.ts",

    "frappe/**/*.ts",
    "models/**/*.ts",
    "patches/**/*.ts",
    "patches/**/*.js",
    "reports/**/*.ts",
    "accounting/**/*.ts",
    "accounting/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
